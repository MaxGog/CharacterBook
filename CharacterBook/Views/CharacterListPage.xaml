<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CharacterBook.ViewModels"
             x:Class="CharacterBook.Views.CharacterListPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Добавить персонажа" Command="{Binding AddCommand}"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <SearchBar x:Name="searchBar"
                    Placeholder="Поиск персонажей..."
                    SearchCommand="{Binding SearchCommand}"
                    Text="{Binding SearchText, Mode=TwoWay}"
                    HeightRequest="40"/>
            <CollectionView x:Name="charactersCollection"
                ItemsSource="{Binding Characters}"
                SelectionMode="Single"
                BackgroundColor="transparent">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Row="0" Grid.RowSpan="3" Grid.Column="0"
                                Source="{Binding ImageByte}"
                                WidthRequest="60" HeightRequest="60"
                                Aspect="AspectFill">
                            </Image>

                            <Label Grid.Row="0" Grid.Column="1"
                                Text="{Binding Name}"
                                FontSize="16"
                                FontAttributes="Bold"
                                TextColor="#333"
                                VerticalOptions="Center"/>
                            <Label Grid.Row="1" Grid.Column="1"
                                Text="{Binding Description}"
                                FontSize="14"
                                TextColor="#666"
                                VerticalOptions="Center"/>

                            <ImageButton Grid.Row="0" Grid.Column="2"
                                        Source="heart.png"
                                        IsVisible="{Binding IsFavorite}"
                                        Command="{Binding ToggleFavoriteCommand}"
                                        WidthRequest="30" HeightRequest="30"
                                        BackgroundColor="Transparent"
                                        Padding="5">
                            </ImageButton>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
    

</ContentPage>
