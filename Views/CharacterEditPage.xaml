<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	      xmlns:models="clr-namespace:CharacterBook.Models"
	      x:Class="CharacterBook.Views.CharacterEditPage"
             Title="{Binding Title}">

    <StackLayout Padding="20">
        <Entry Placeholder="Имя"
               Text="{Binding Name}"
               Margin="0,0,0,10"/>
        
        <Entry Placeholder="Пол"
               Text="{Binding Gender}"
               Margin="0,0,0,10"/>
        
        <Entry Placeholder="Возраст"
               Text="{Binding Age}"
               Margin="0,0,0,10"/>
        
        <Entry Placeholder="Раса"
               Text="{Binding Race}"
               Margin="0,0,0,10"/>
        
        <Editor Placeholder="Описание"
                Text="{Binding Description}"
                HeightRequest="100"
                Margin="0,0,0,10"/>
        
        <CollectionView x:Name="imageCollection"
                       ItemsSource="{Binding Images}"
                       SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="5">
                        <Image Source="{Binding}"
                               Aspect="AspectFill"
                               HeightRequest="100"
                               WidthRequest="100"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
        <Button Text="Выбрать изображения"
                Command="{Binding PickImagesCommand}"
                Margin="0,10,0,0"/>
        
        <Button Text="Сохранить"
                Command="{Binding SaveCommand}"
                Margin="0,10,0,0"/>
    </StackLayout>

</ContentPage>